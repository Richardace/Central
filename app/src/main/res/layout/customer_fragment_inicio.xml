<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context=".customer.InicioFragment"
        android:orientation="vertical">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2">
            <Button
                android:text="Mascotas \n Registradas \n \n 164"
                android:layout_width="180dp"
                android:layout_marginBottom="10dp"
                android:layout_height="100dp"
                android:background="@drawable/esquinas_estadisticas"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18dp"


                />
            <Button
                android:text="Historico de \n Mensajes \n \n 2140"
                android:layout_width="180dp"
                android:layout_marginBottom="10dp"
                android:layout_height="100dp"
                android:background="@drawable/esquinas_estadisticas"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18dp"



                />
            <Button
                android:text="Historico de \n Citas Medicas \n \n 240"
                android:layout_width="180dp"
                android:layout_marginBottom="10dp"
                android:layout_height="100dp"
                android:background="@drawable/esquinas_estadisticas"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18dp"

                />
            <Button
                android:text="Veterinarios \n Activos \n \n 15"
                android:layout_width="180dp"
                android:layout_marginBottom="10dp"
                android:layout_height="100dp"
                android:background="@drawable/esquinas_estadisticas"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18dp"


                />
        </GridLayout>

        <AutoCompleteTextView
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="707dp"
            android:layout_marginLeft="12px"
            android:layout_marginRight="12px">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#E0F7FA"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#03A9F4"

                    android:text="  Ultimas Noticias"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/esquinas_redondeadas"
                    android:orientation="vertical">
                    <!-- Media -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="194dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/new1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="8dp"
                        android:text="El especialista en dermatología para animales, Belisario Roncallo destaca el crecimiento del sector de mascota en Barranquilla."
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="04 de Junio de 2019 - 10:48 || POR: DANIELA PASTORI"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="#616161"
                        android:textSize="7dp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="319dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/esquinas_redondeadas"
                    android:orientation="vertical">

                    <!-- Media -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="194dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/new2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="8dp"
                        android:text="El tamaño del mercado de mascotas en Barranquilla tiene como
referencia una población de animales que, de acuerdo a la
Secretaría de Salud Pública, es de 136.940 perros y 49.298 gatos."
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="04 de Junio de 2019 - 09:58 || POR: NILSON ROMO MENDOZA"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="#616161"
                        android:textSize="7dp"

                        />
                </LinearLayout>
            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E0F7FA">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"

                android:text="  Nuestros Veterinarios"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="18dp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/banda"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Media -->

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:columnCount="2">

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:background="#76AFFF"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="103dp"
                                android:layout_margin="10dp"
                                app:srcCompat="@drawable/vetwomen" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="Andrea Bermudez"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:background="#76AFFF"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="103dp"
                                android:layout_margin="10dp"
                                app:srcCompat="@drawable/vetmen" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="Jorge Mojica"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>