<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:background="#FFD185"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Titulo"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="12dp" />


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idMascota"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:text="Titulo Secundario"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/idCliente"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:text="Titulo Terciario"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="9dp" />

        </LinearLayout>
        <!-- Media -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="129dp"
                android:layout_height="176dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Titulo Secundario"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/idHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Titulo Terciario"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textSize="9dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imagenEstado"
                android:layout_width="273dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/acepted" />

        </LinearLayout>

        <TextView
            android:id="@+id/estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Estado"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textSize="14dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>